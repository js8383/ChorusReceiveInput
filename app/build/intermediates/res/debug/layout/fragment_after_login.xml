<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="guillermobeltran.chorusinput.AfterLogin$PlaceholderFragment">

        <ImageView
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:id = "@+id/logo"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/chorus_logo"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask The Crowd"
            android:textAllCaps="false"
            android:id="@+id/askBtn"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="50dp"
            android:onClick="askQuestion"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welcome to Chorus. To get started hit the arrow on the top left and ask a question, review your questions, or answer questions."
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:textColor="#ff000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
</RelativeLayout>
