<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="guillermobeltran.chorusinput.Chat"
    android:background="@color/background_floating_material_dark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chatLinearLayout">

        <WebView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/webView"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/ChatList"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="5"
            android:layout_weight="5"
            android:background="#ff00f6ff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:contentDescription="@string/mic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/imageButton3"
                android:src="@mipmap/mic1"
                android:background="@null"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:onClick="ChatSpeechInput"
                android:nestedScrollingEnabled="true" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/editText"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="5"
                android:layout_weight="6"
                android:background="@null"
                android:textColor="#ff020202"
                android:inputType=
                    "textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/yelp_button"
                android:src="@drawable/ic_media_play"
                android:scaleType="centerInside"
                android:text="Yelp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Send"
                android:id="@+id/CrowdSend"
                android:onClick="sendText"/>
        </LinearLayout>

    </LinearLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:src="@android:drawable/ic_menu_info_details"
        android:visibility="gone" />

</RelativeLayout>
